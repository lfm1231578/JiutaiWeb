@model PagedList<EYB.ServiceEntity.CashEntity.MainCardBalanceEntity>
@{

    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div id="mainContentBody">
    @Html.Partial("_RemindManage")
    <div id="mainContentRight">
        <div class="mainContentRight_top">
            <label class="Soliddots">
            </label>
            余额不足提醒 (<span id="sp">@Model.TotalItemCount</span>)
        </div>
        <div class="mainContentRight_bottom clearfix" style="position: relative;" id="mainContentRight_bottom">
            <div class="mainContentRight">
                <div class="toolbar">
                    <div class="box-wrap">
                        <div class="l-list">
                            @using (Ajax.BeginForm("BalanceManage", new RouteValueDictionary { { "id", "" } }, new AjaxOptions { UpdateTargetId = "articles", HttpMethod = "Get", InsertionMode = InsertionMode.Replace }, new RouteValueDictionary { { "id", "searchForm" } }))
                            {
                                <div class="accountdiv" style="margin:0px auto; width:100%;">
                                    卡号：
                                    <input type="text" name="MemberNo" id="MemberNo" class="text-input ymxInput " style="height:20px;" value="" />
                                    姓名：
                                    <input type="text" name="UserName" id="UserName" class="text-input ymxInput " style="height:20px;" value="" />
                                    实际账户余额：
                                    <input type="text" name="Price" id="Price" class="text-input ymxInput " style="height:20px;" value="" />-
                                    <input type="text" name="AllPrice" id="AllPrice" class="text-input ymxInput " style="height:20px;" value="" />
                                    是否赠卡:
                                    <input type="checkbox" name="IsGive" value="1" />
                                    <input type="hidden" value="@DateTime.Now.Ticks" name="ExpireTime" id="txtTime" />
                                    <input type="submit" class="submitbutton2" id="btnsumbit" style="float: none;" value="查 询" />
                                </div>
                            }
                        </div>
                    </div>
                </div>
                <div id="articles" class="" style="overflow:auto; margin-top: 5px; width: 100%;">
                    @Html.Partial("_BalanceList", Model)
                </div>
                @{Html.RegisterMvcPagerScriptResource();}
                <script src="../../Scripts/Jquery/plugins/jquery.unobtrusive-ajax.min.js" type="text/javascript"></script>
            </div>
        </div>

    </div>
</div>
