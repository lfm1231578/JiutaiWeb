@using Webdiyer.WebControls.Mvc;
@model PagedList<EYB.ServiceEntity.PatientEntity.CustomertracksEntity>
@{
    Layout = null;

}
<table class="gridTable" cellpadding="0" cellspacing="0">
    <thead>
        <tr style="height: 30px;">
            <th>
                姓名
            </th>
            <th>
                卡号
            </th>
            <th>
                下次跟进时间
            </th>
            <th>
                跟进人
            </th>
            <th>
                沟通内容
            </th>
            <th>
                描述
            </th>
            <th>
                下次护理内容
            </th>
            <th>
                状态
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var info in Model)
        {
            <tr>
                <td>
                    @info.CustomerUsername
                </td>
                <td>
                    @info.MemberNo
                </td>
                <td>
                    @info.LastTime.ToString("yyyy-MM-dd")
                </td>
                <td>
                    @info.UserName
                </td>
                <td>
                    @info.Evaluate
                </td>
                <td>
                    @info.Memo
                </td>
                <td>
                    @info.LastMemo
                </td>
                <td>
                    @(info.Statu == 1 ? "已处理" : "待处理")
                </td>
            </tr>
        }
        @Html.Raw(HS.SupportComponents.NoRecord.NoRecords(Model.Count, 8))
    </tbody>
</table>
