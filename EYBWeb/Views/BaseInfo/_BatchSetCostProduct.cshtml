@using Webdiyer.WebControls.Mvc;
@model PagedList<EYB.ServiceEntity.BaseInfo.ProductEntity>
    @{
        Layout = null;
    }

    <input type="hidden" value="" name="orderDirection" id="orderDirection" />
    <input type="hidden" value="" name="orderField" id="orderField" />
    <table class="gridTable" id="proudectList" style="height: auto; border-collapse: collapse;
    margin: 0px; width: 100%;" cellpadding="0" cellspacing="0">
        <thead>
            <tr>
                <th>
                    @*<a href="javascript:selectall('radioList');" id="check_box" style="color: #fff; text-decoration: underline;"></a>*@

                    <input type="checkbox" id="check_boxs" class="checkbox" onclick="selectall('radioList')" />
                    @*<a href="javascript:selectall('radioList');" id="check_boxs" style="color: #fff; text-decoration: underline;">*@
                </th>
                <th>
                    产品名称
                </th>
                <th style="text-align: left;">
                    成本价
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var entity in Model)
            {

                <tr class="ableclick">
                    <td>
                        <input type="hidden" name="ProductID" value="@entity.ID" />
                        <input name="radioList" type="checkbox" value="@entity.ID" />
                    </td>
                    <td>
                        @entity.Name
                    </td>
                    <td>
                        <input type="text" value="@entity.CostPrice" name="CostPrice" class="new-input" />
                    </td>
                </tr>
            }
        </tbody>
    </table>
    @Html.Pager(Model, new PagerOptions { PageIndexParameterName = "pageNum", PagerItemsSeperator = "", ShowPageIndexBox = false, CurrentPagerItemWrapperFormatString = "<span class=\"current\">{0}</span>" }, new { id = "badoopager" })
    <script type="text/javascript">
        $("#check_boxs").click(function () {

            var all = document.getElementById("check_boxs");
            var mychk = document.getElementsByName("radioList");
            if (all.checked == true) {

                if (mychk.length) {
                    for (var i = 0; i < mychk.length; i++) {
                        mychk[i].checked = true;
                    }

                }
                mychk.chcked = true;
            } else {

                if (mychk.length) {
                    for (var i = 0; i < mychk.length; i++) {
                        mychk[i].checked = false;
                    }

                }
            }

        })
        $("#check_boxs").click(function () {
            var chekbox = $("#check_boxs");
            //var costcolor = document.getElementById("CostColor");
            if (chekbox.prop("checked") == false) {
                chekbox.attr("checked", "checked");

            } else {
                chekbox.attr("checked", false);
            }
        })
    </script>
