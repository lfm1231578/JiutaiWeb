@{
    Layout = "_Layout.cshtml";
   
}
<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=7" />
    <style type="text/css">
        * {
            padding: 0;
            margin: 0;
            font-size: 12px;
        }

        a:link, a:visited {
            text-decoration: none;
            color: #0068a6;
        }

        a:hover, a:active {
            color: #ff6600;
            text-decoration: underline;
        }

        .showMsg {
            border: 1px solid #1e64c8;
            zoom: 1;
            width: 450px;
            height: 172px;
            position: absolute;
            top: 44%;
            left: 50%;
            margin: -87px 0 0 -225px;
        }

            .showMsg h5 {
                background-image: url(../../Content/themes/images/msg.png);
                background-repeat: no-repeat;
                color: #fff;
                padding-left: 35px;
                height: 25px;
                line-height: 26px;
                *line-height: 28px;
                overflow: hidden;
                font-size: 14px;
                text-align: left;
            }

            .showMsg .content {
                padding: 46px 12px 10px 45px;
                font-size: 14px;
                height: 64px;
                text-align: left;
            }

            .showMsg .bottom {
                background: #e4ecf7;
                margin: 0 1px 1px 1px;
                line-height: 26px;
                *line-height: 30px;
                height: 26px;
                text-align: center;
            }

            .showMsg .ok, .showMsg .guery {
                background: url(../../Content/themes/images/msg_bg.png) no-repeat 0px -560px;
            }

            .showMsg .guery {
                background-position: left -460px;
            }
    </style>
    <script src="../../Scripts/Jquery/jquery-1.8.2.min.js" type="text/javascript"></script>
    <script src="../../Scripts/common/common.js" type="text/javascript"></script>
    <title>消息提示</title>
</head>
<body style="background: #fff;">
    <div class="showMsg" style="text-align: center; background: #fff;">
        <h5>
            消息头
        </h5>
        <div class="content guery" style="display: inline-block; display: -moz-inline-stack;
            zoom: 1; *display: inline; max-width: 330px;">
            @(string.IsNullOrEmpty(ViewBag.Message) ? "操作成功！" : ViewBag.Message)
        </div>
        <div class="bottom">
            系统将在 <span style="color: blue; font-weight: bold">@ViewBag.waitSecond</span>秒后自动跳转，如果不想等待，直接点击<a id="pageIn" href="@ViewBag.jumpUrl">这里</a>
            <script type="text/javascript">
                function redirect() {

                    var url = $("#pageIn").attr("href");
                    location.href = url;
                } 
                if ("@ViewBag.Message" == "操作成功") {
                    setTimeout("redirect()", parseInt(@ViewBag.waitSecond) * 1000);
                }
            </script>
        </div>
    </div>
</body>
</html>
