@using Webdiyer.WebControls.Mvc;
@model PagedList<EYB.ServiceEntity.ActivityEntity.BonusWithdrawEntity>
@{
    Layout = null;
    int countNum = 0;
    var str="";
}
<form action="" method="post" id="searchForm">
    <input type="hidden" value="" name="orderDirection" id="orderDirection" />
    <input type="hidden" value="" name="orderField" id="orderField" />
    <table class="gridTable" id="proudectList" style="height: auto; border-collapse: collapse;
margin: 0px; width: 100%;" cellpadding="0" cellspacing="0">
        <thead>
            <tr>
                <th></th>
                <th>
                    员工姓名
                </th>
                <th>
                    员工提现门店
                </th>
                <th>
                    提现金额
                </th>
                <th>
                    提现余额
                </th>
                @*<th>
                    提现方式
                </th>*@
                <th>
                    提现时间
                </th>
                <th>
                    备注
                </th>
                @*<th>
                    操作人
                </th>*@
            </tr>
        </thead>
        <tbody>
            @foreach (var entity in Model)
            {
                countNum = countNum + 1;
                //var listValue = entity.ID + "|" + entity.Name + "|" + entity.RetailPrice + "|" + entity.CostPrice + "|" + entity.ServiceTime + "|" + entity.TypeName + "|" + entity.ISKit + "$";
                <tr class="ableclick">                 
                    <td>
                        @countNum
                    </td>
                    <td>
                        @entity.UserName
                    </td>
                    <td>
                        @entity.Name
                    </td>
                    <td>
                        @entity.Amount
                    </td>
                    <td>
                        @entity.Surplus
                    </td>
                    @*<td>
                        @if (entity.Mode == 1)
                        {
                            str = "系统提现";
                        }
                         @str
                    </td>*@
                    <td>
                        @entity.CreateTime
                    </td>
                    <td>
                        @entity.Remarks
                    </td>
                    @*<td>
                        @entity.Creator
                    </td>*@
                </tr>
           }
        </tbody>
    </table>
    @Html.Pager(Model, new PagerOptions { PageIndexParameterName = "pageNum", PagerItemsSeperator = "", ShowPageIndexBox = false, CurrentPagerItemWrapperFormatString = "<span class=\"current\">{0}</span>" }, new { id = "badoopager" })
</form>
    <script type="text/javascript">

        $(function () {
            $("#sp").text('@Model.TotalItemCount');
            //计算head高度，宽度 计算articles高度
        })
    </script>


