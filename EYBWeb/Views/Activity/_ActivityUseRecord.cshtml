@using Webdiyer.WebControls.Mvc;
@model PagedList<EYB.ServiceEntity.ActivityEntity.ActivityUseEntity>
    @{
        Layout = null;
    }
    <form action="" method="post" id="searchForm">
        <input type="hidden" value="" name="orderDirection" id="orderDirection" />
        <input type="hidden" value="" name="orderField" id="orderField" />
        <table class="gridTable" id="proudectList" style="height: auto; border-collapse: collapse; margin: 0px;width:100%;"
               cellpadding="0" cellspacing="0">
            <thead>
                <tr>

                    <th>
                        所属门店
                    </th>
                    <th>
                        姓名
                    </th>
                    <th>
                        卡号
                    </th>
                    <th>
                        手机
                    </th>
                    <th>
                        微信昵称
                    </th>
                    <th>
                        是否关注
                    </th>

                    <th>
                        订单号
                    </th>
                    <th>
                        活动名称
                    </th>
                    <th>
                        券号
                    </th>
                    <th>
                        使用数量
                    </th>
                    <th>
                        使用日期
                    </th>
                    <th>
                        抵扣金额
                    </th>
                    <th>
                        带动营业额
                    </th>
                    <th>
                        发送员工
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var entity in Model)
                {

                    <tr class="ableclick">

                        <td>
                            @entity.Name
                        </td>
                        <td>
                            @entity.UserName
                        </td>
                        <td>
                            @entity.CardNo
                        </td>
                        <td>
                            @entity.Mobile
                        </td>

                        <td>
                            @entity.WxNickname
                        </td>
                        <td>
                            @(string.IsNullOrEmpty(entity.WxOpenId) ? Html.Raw("<label style='color:red;'>未关注</label>") : Html.Raw("<label style='color:green;'>已关注</label>"))
                        </td>

                        <td>
                            <a href="javascript:OpenOrderDetail('@entity.OrderNo');">
                                @entity.OrderNo
                            </a>
                        </td>
                        <td>
                            @entity.ActivityName
                        </td>
                        <td>
                            @entity.CouponNo
                        </td>
                        <td>
                            @entity.UseCount
                        </td>
                        <td>
                            @entity.UseTime
                        </td>
                        <td>
                            @entity.Amount
                        </td>
                        <td>
                            @entity.Revenue
                        </td>
                        <td>
                            @entity.SendUser
                        </td>

                    </tr>
                }
            </tbody>
        </table>
        @Html.Pager(Model, new PagerOptions { PageIndexParameterName = "pageNum", PagerItemsSeperator = "", ShowPageIndexBox = false, CurrentPagerItemWrapperFormatString = "<span class=\"current\">{0}</span>" }, new { id = "badoopager" })
    </form>
    <script type="text/javascript">
        $(function () {
            $("#sp").text('@Model.TotalItemCount');
        })
    </script>

