        }
        var years = $("#Years").val();
        var months = $("#Months").val();
        var url = "/ReservationDoctorManage/SalaryDaka?HospitalID=" + HospitalID + "&years=" + years + "&months=" + months+"&operareType="+1;
        window.location.href = url;

