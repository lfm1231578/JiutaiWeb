    //微信解绑
    function WeixinbindRemove(userID)
    {
        if(confirm("确定解绑?解绑后需要用户再次微信扫描绑定方可绑定!"))
        {
            $.ajax({
                type: "post", //使用get方法访问后台
                dataType: "json", //返回json格式的数据
                url: "/PatientManage/WeixinbindRemove",
                data: { "UserID":userID },
                async: false,
                success: function (data) {
                    if(data>0)
                    {
                        alert("解绑成功!");
                        location = location;
                        //location.href = location.href;
                    }else
                    {
                        alert("解绑失败!");
                    }
                },
                error: function () {
                    alert("支付失败！");
                }
            });


        }

    };
