                    {
                        <option @(info.UserID == patientInfo.FollowUpMrUserID ? "selected=selected" : "") value="@info.UserID">@info.UserName</option>
                    }
                </select>
            </td>
            <td class="tdright">
                微信号：
            </td>
            <td>
                @patientInfo.Weixin
            </td>
        </tr>
        <tr style="height:30px;">
            <td class="tdright">
                身份证号：
            </td>
            <td>
                @patientInfo.CertNo
            </td>
            <td class="tdright">
                邮编：
            </td>
            <td>
                @patientInfo.PostalCode
            </td>
        </tr>
        <tr style="height:30px;">
            <td class="tdright">
                家庭地址:
            </td>
            <td>
                @patientInfo.Address
            </td>
            <td class="tdright">
                尊贵级别:
            </td>
            <td>
                @patientInfo.Category
            </td>
        </tr>
        <tr style="height:30px;">
            <td class="tdright">
                获悉方式:
