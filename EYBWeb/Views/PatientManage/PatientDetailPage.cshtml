                    {
                        <option  value="@info.InfoName" @(info.InfoName == patientInfo.ArchivesType ? "selected=selected" : "")>@info.InfoName
                        </option>
                    }
                </select>
            </td>
        </tr>
        <tr style="height:30px;">
            <td class="tdright">
