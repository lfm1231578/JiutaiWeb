@{
    ViewBag.Title = "Hlep";
    Layout = null;
    string month3 = Math.Floor(Convert.ToDecimal(ViewBag.Price / 4)).ToString();
    string month6 = Math.Floor(Convert.ToDecimal(ViewBag.Price / 2)).ToString();
    string month = Math.Floor(Convert.ToDecimal(ViewBag.Price)).ToString();
    string year2 = Math.Floor(Convert.ToDecimal(Convert.ToDouble(ViewBag.Price) * 2 * 0.9)).ToString();
    string year3 = Math.Floor(Convert.ToDecimal(Convert.ToDouble(ViewBag.Price) * 3 * 0.85)).ToString();
}
<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta http-equiv="pragma" content="no-cache" />
    <meta http-equiv="Cache-Control" content="no-cache,   must-revalidate" />
