    <meta http-equiv="X-UA-Compatible" content="IE=EmulateIE8" />
    <script src="../../Scripts/Jquery/jquery-1.8.2.min.js" type="text/javascript"></script>
    <script src="../../Scripts/Jquery/plugins/artDialog/artDialog.js" type="text/javascript"></script>
    <script src="../../Scripts/Jquery/plugins/artDialog/plugins/iframeTools.js" type="text/javascript"></script>
    <script src="../../Scripts/Jquery/jquery-labelauty.js" type="text/javascript"></script>
    <style>
        h2
        {
            text-align: center;
        }
        a{ text-decoration:none;}
       ul { list-style-type: none;}
        li { display: inline-block;}
        li { margin: 10px 0;}
        input.labelauty + label { font: 12px "Microsoft Yahei";}
   
        .zhifufangshi label{ background:#fff;  width:289px;height:42px; line-height:34px;border:1px solid #e3e3e3;  display:inline-block; vertical-align:middle; cursor:pointer;  float:left;}
        .zhifufangshi{ width:320px;float:left;}
        .zhifufangshi img{ float:left;}
        .zhifufangshi input{ float:left; margin-top:15px; margin-right:8px;}

        .text{ float:right; display:inline-block; padding-right:8px; line-height:40px;}
       
        .manager-btn,.common-btn{ height:44px; line-height:44px; display:inline-block;*display:inline;*zoom:1;padding:0 20px;height:32px;line-height:32px;background:#2086ee;font-size:14px;color:#fff;text-align:center;cursor:pointer;border:0;-webkit-transition:all .3s;transition:all .3s;font-weight:400;-webkit-appearance:none;}
                                  
 
        .showmessage {
            z-index:10;display:none; padding:14px 20px; position:absolute;
            margin-top:20px; margin-left:-100px;
            width:300px; line-height:16px;
               border:2px solid #FFF;  color:#EEE;
            background:#333 url(../../Content/themes/images/css-tooltip-gradient-bg.png) repeat-x 0 0;
        }
       
        .callout {z-index:20;position:absolute;border:0;top:-14px;left:120px;}
    
    </style>
    <link href="../../Content/themes/css/jquery-labelauty.css" rel="stylesheet" type="text/css" />
</head>
<body style="background-color: #fff;">
    <h2 style="height: 30px;">
        在线续费中心</h2>
    <h2 style="height: 30px; color: #0a95e2;">
        【 @ViewBag.ParentHospitalName 】 年费：@ViewBag.Price</h2>
  <h4 style="height: 20px; text-align:center;color:#0a95e2;">
      到期时间： @ViewBag.ExpireTime</h4>

    <table class="mainContentRight_bottomnewdepart1">
        <tr style="height: 60px;">
            <td>
                请选择续费时长:
            </td>
            <td>
                <div>
                    <ul class="dowebok">
                        <li>
                            <input type="radio" class="chargetime" name="radio" value="1" data-labelauty="三个月">
                        </li>
                        <li>
                            <input type="radio" class="chargetime" name="radio" value="2" data-labelauty="半年"></li>
                        <li>
                            <input type="radio" class="chargetime" name="radio" value="3" data-labelauty="1年"></li>
                        <li>
                            <input type="radio" class="chargetime" name="radio" value="4" data-labelauty="2年 （优惠)">
                            <span class="showmessage">
                                <img class="callout" src="../../Content/themes/images/callout_black.gif">
                                续费两年，立享官网价格9折 </span></li>
                        <li>
                            <input type="radio" class="chargetime" name="radio" value="5" data-labelauty="3年 （优惠)">
                            <span class="showmessage">
                                <img class="callout" src="../../Content/themes/images/callout_black.gif">
                                续费两年，立享官网价格8.5折 </span></li>
                    </ul>
                </div>
                <div style="padding-left:40px;">
                    费用：<label id="labfeiyong">@Convert.ToInt32(ViewBag.Price)</label></div>
            </td>
        </tr>
        <tr style="height: 60px;">
            <td style="border-bottom: 1px solid #ccc;">
                请选择支付方式:
            </td>
            <td style="border-bottom: 1px solid #ccc; width: 900px;">
            </td>
        </tr>
        <tr style="height: 150px;">
            <td>
            </td>
            <td>
                <div class="zhifufangshi">
                    <input type="radio" id="alipay" name="PT1" value="支付宝" />
                    <label for="alipay">
                        <img src="../../Content/themes/images/alipay.gif" height="40" width="100"><span class="text"
                            style="color: green">适合支付宝余额付款</span></label>
                </div>
                <div class="zhifufangshi" style="margin-left: 40px;">
                    <input type="radio" id="c_wxshaoma" name="PT1" value="微信" /><label for="c_wxshaoma"><img src="../../Content/themes/images/wx.jpg"
                        height="27" style="padding: 6px 0 0 5px;"><span class="text" style="color: green">手机微信扫码支付</span></label>
                </div>
            </td>
        </tr>
        <tr style="height: 80px;">
            <td>
            </td>
            <td>
                <a href="###" class="manager-btn l-btn" onclick="nextpay()">继续下一步</a>
            </td>
        </tr>
        <tr style="height: 80px;">
            <td>
            </td>
            <td style="border-left: 4px solid #ffbd30; background: #fffde6; padding: 10px;">
                如出现支付异常请联系客服<br />
              
            </td>
        </tr>
    </table>
    <script type="text/javascript">
        function Openlink(obj) {
            top.location.href = obj;
        }
        $(function () {
            $('.chargetime').labelauty();
        });
        function nextpay() {
            var feiyong = $("#labfeiyong").text();
            if ($('input[name="radio"]:checked').lenth==0) {
                alert("请选择续费年限！");return;
            }
            var zhifufangshi = $('input[name="PT1"]:checked').val();
            var showtime = $('input[name="radio"]:checked').val();
            var addmonth = 0;
            switch (showtime) {
                case "1":
                    addmonth = 3;
                    break;
                case "2":
                    addmonth = 6;
                    break;
                case "3":
                    addmonth = 12;
                    break;
                case "4":
                    addmonth = 24;
                    break;
                case "5":
                    addmonth = 36;
                    break;
            }
            if (zhifufangshi == "微信") {
                art.dialog.open("/Pay/WeixinPay?Price=" + feiyong + "&Productid=@ViewBag.ParentHospitalName&ParentHospitalID=@ViewBag.ParentHospitalID&addmonth="+addmonth, { title: "微信扫码支付", width: 700, height: 500 })
            } else if (zhifufangshi == "支付宝") {

            }
        }
        $("li").click(function(){
            var feiyong = 0;
            var showtime = $('input[name="radio"]:checked').val();

            switch (showtime) {
                case "1":
                    feiyong = "@month3";
                    break;
                case "2":
                    feiyong = "@month6";
                    break;
                case "3":
                    feiyong = "@month";
                    break;
                case "4":
                    feiyong = "@year2";
                    break;
                case "5":
                    feiyong = "@year3";
                    break;
            }
            $("#labfeiyong").text(feiyong);
        })
        $("li").hover(
          function () {

              $(this).find(".showmessage").css("display", "inline");
          },
          function () {
              $(this).find(".showmessage").css("display", "none");
          }
        );
    </script>
</body>
</html>
