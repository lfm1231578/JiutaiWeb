                    </td>
                    <td>
                        <input type='text' name='Number' onkeyup='CheckInputIntFloat(this)' class='Number wid50'
                            value='@info.Number' />
                    </td>
                    <td>
                    <input type="hidden" name="HouseID" value="@info.TransferHouseID" />
                    <label>@info.TransferHouseName</label>
                    </td>
                    <td class='allprice'>
                        @(info.Number * info.RetailPrice)
