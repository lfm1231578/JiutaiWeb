        $(this).find("input:checkbox").attr("checked", "checked");
        FullValue();
    });
    //确定选择按钮
    function FullValue() {
        var value = "";
        $("input[name='radioList']:checked").each(function (i) {
            value += $(this).val();
        });

        if (value == undefined) {
            alert("请选择产品");
            return false;
        }
        art.dialog.data('bValueProduct', value); // 存储数据
        art.dialog.close();
    }
    //关闭
    function closeed() {
        art.dialog.data('bValueProduct', '');
        art.dialog.open.api.close();
    }
</script>
