<script type="text/javascript">
    //接收产品
    function ProductList() {
        art.dialog.open("/WarehouseManage/kucunChanpin", { title: "盘点产品列表", width: 660, height: 470, close: function () {
            var bValue = art.dialog.data('bValueProduct'); // 读取B页面的数据
