@using Webdiyer.WebControls.Mvc;
@model PagedList<EYB.ServiceEntity.CashEntity.MainCardBalanceEntity>
@{
    ViewBag.Title = "_Patientlist";
    Layout = null;
}
<form action="" method="post" id="submitform">
<input type="hidden" value="" name="orderDirection" id="orderDirection" />
<input type="hidden" value="" name="orderField" id="orderField" />
<table class="gridTable" style="border-collapse: collapse;">
    <thead>
        <tr>
            <th>
                门店名称
            </th>
    <th >
                顾客卡号
            </th>
            <th >
                顾客名称
            </th>
            <th @(ViewBag.orderField == "Tiems" ? "class=" + ViewBag.orderDirection + "" : "") orderfield="Tiems">
                余次
            </th>
            <th @(ViewBag.orderField == "Price" ? "class=" + ViewBag.orderDirection + "" : "") orderfield="Price">
                余额
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var entity in Model)
        {
            <tr>
                <td>@entity.HospitalName
                </td>
     <td>@entity.MemberNo
                </td>
                <td>@entity.UserName
                </td>
                <td>@entity.Tiems
                </td>
                <td>@entity.Price
                </td>
            </tr>
        }
        <tr>
            <td>
            </td>  <td>
            </td>
            <td>
                合计
            </td>
            <td>@ViewBag.sumcard
            </td>
            <td>@ViewBag.sumconsumer
            </td>
        </tr>
        @Html.Raw(HS.SupportComponents.NoRecord.NoRecords(Model.Count, 5))
    </tbody>
</table>
@Ajax.Pager(Model, new PagerOptions { PageIndexParameterName = "pageNum", PagerItemsSeperator = "", ShowPageIndexBox = false, CurrentPagerItemWrapperFormatString = "<span class=\"current\">{0}</span>" }, new MvcAjaxOptions { UpdateTargetId = "articles", HttpMethod = "Post", DataFormId = "searchForm" }, new { id = "badoopager" })
</form>
