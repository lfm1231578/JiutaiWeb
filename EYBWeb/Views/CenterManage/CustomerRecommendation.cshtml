@using Webdiyer.WebControls.Mvc;
@model PagedList<EYB.ServiceEntity.PatientEntity.PatientEntity>
@using SystemManage.Factory.IBLL;
@using PersonnelManage.Factory.IBLL;
@{
    ViewBag.Title = "顾客转介绍";
    var orderField = ViewBag.orderField;
    var orderDirection = ViewBag.orderDirection;
}
<div id="mainContentBody">
    @*   @Html.Partial("_CenterControl")*@
    @Html.Partial("~/Views/PatientManage/_PartialPatientControl.cshtml")
    <div id="mainContentRight">
        <div class="mainContentRight_top">
            <label class="Soliddots">
            </label>
            顾客转介绍管理
        </div>
        <div class="mainContentRight_bottom clearfix">
            <div id="tabbox">
                <ul class="tabs" id="tabs">
                    <li><a href="###" tab="tab1">转介绍列表</a></li>
                    <li><a href="###" tab="tab2">转介绍汇总</a></li>
                </ul>
                <ul id="tab_conbox" class="tab_conbox">
                    <li id="tab1" class="tab_con" style="height: 100%; width:100%;">
                        <iframe src="@Url.Content("~/CenterManage/CustomerRecommendationList")" href="@Url.Content("~/CenterManage/CustomerRecommendationList")" frameborder="0" style="width:100%;_border:none;border:none;  border:0px; _border:0px; "></iframe>
                    </li>
                    <li id="tab2" class="tab_con" style="display: none;height: 100%; width:100%;">
                        <iframe src="" href="@Url.Content("~/CenterManage/CustomerRecommendationCount")" frameborder="0" style="width:100%;_border:none;border:none;  border:0px; _border:0px; "></iframe>
                    </li>
                </ul>
            </div>
        </div>
    </div>
</div>
<script type="text/javascript">
    jQuery(document).ready(function () {
        $("iframe").height(getDocumentHeight() - $("#header").height() - $("#footer").height() - 110);
        //Tab切换
        $("#tabs  li").click(function () {
            $("#tabs li").removeClass("thistab");
            $(this).addClass("thistab");
             $("#tabs li").children("a").css("color","#666","textShadow", "1px 1px 1px #868686")
             $(this).children("a").css("color","lightsalmon","textShadow", "1px 1px 1px #868686")
            $(".tab_con").hide();
            var index = $(this).parent().find("li").index(this);
            $("#tab_conbox").find(".tab_con").eq(index).show();
            var iframe1 = $("#tab_conbox").find(".tab_con").eq(index).find("iframe");
            iframe1.attr("src", iframe1.attr("href"));
        });
        $("#tabs li:first").addClass("thistab").show();
        $("#tabs li:first").children("a").css("color", "lightsalmon");
    });
</script>
