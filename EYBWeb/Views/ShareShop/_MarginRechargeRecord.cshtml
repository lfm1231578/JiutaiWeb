@using Webdiyer.WebControls.Mvc;
@model PagedList<EYB.ServiceEntity.ShareShopEntity.ShareholderRechargeEntity>
    @{
        Layout = null;
    }
    <form action="" method="post" id="searchForm">
        <input type="hidden" value="" name="orderDirection" id="orderDirection" />
        <input type="hidden" value="" name="orderField" id="orderField" />
        <table class="gridTable" id="proudectList" style="height: auto; border-collapse: collapse; margin: 0px;width:100%;"
               cellpadding="0" cellspacing="0">
            <thead>
                <tr>
                    <th>姓名</th>
                    <th>手机</th>
                    <th>充值保证金</th>
                    <th>充值时间</th>
                    <th>备注</th>
                    <th>操作人</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var entity in Model)
                {
                    <tr class="ableclick">
                        <td>@entity.UserName</td>
                        <td>@entity.Mobile</td>
                        <td>@entity.Amount</td>
                        <td>@entity.CreateTime</td>
                        <td>@entity.Remarks</td>
                        <td>@entity.Creator</td>
                    </tr>
                }
            </tbody>
        </table>
    </form>
    <script type="text/javascript">
        $(function () {
            $("#sp").text('@Model.TotalItemCount');
        })
    </script>

